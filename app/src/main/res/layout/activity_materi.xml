<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.MateriActivity">

    <include
        android:id="@+id/toolbar_materi"
        layout="@layout/toolbar"
        />

    <ScrollView
        android:layout_below="@id/toolbar_materi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_logo"
                android:src="@drawable/logo"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/title_materi"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="MATERI HIDROLOSIS GARAM"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_below="@id/image_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sub_judul01"
                android:layout_below="@id/title_materi"
                android:padding="2dp"
                android:text="Pengertian Hidrolisis Garam"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_txt_view01"
                android:text="Hidrolisis garam adalah reaksi penguraian yang terjadi antara kation dan anion garam dengan air dalam suatu larutan. Kation dan anion yang dapat mengalami reaksi hidrolisis adalah kation dan anion garam yang termasuk elektrolit lemah. Sedangkan kation dan anion garam yang tidak terhidrolisis adalah kation dan anion garam yang termasuk elektrolit kuat."
                android:layout_below="@id/sub_judul01"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/sub_judul02"
                android:layout_below="@id/txt_txt_view01"
                android:padding="2dp"
                android:text="Jenis-Jenis Hidrolisis Garam"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_txt_view02"
                android:text="Jenis-jenis hidrolisis garam dibagi menjadi empat, yaitu hidrolisis garam asam kuat dengan basa kuat, asam kuat dengan basa lemah, asam lemah dengan basa kuat, dan asam lemah dengan basa lemah."
                android:layout_below="@id/sub_judul02"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sub_bab_judul01"
                android:layout_below="@id/txt_txt_view02"
                android:padding="2dp"
                android:text="1. Hidrolisis garam asam kuat dengan basa kuat tidak terhidrolisis dan bersifat netral."
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_txt_view03"
                android:text="Hidrolisis garam asam kuat dengan basa kuat tidak terhidrolisis karena memiliki kation dan anion yang tidak akan terhidrolisis bila direaksikan dengan air. Contoh soal hidrolisis garam asam kuat dengan basa kuat:"
                android:layout_below="@id/sub_bab_judul01"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_txt_view04"
                android:text="Garam NaCl tersusun dari NaOH dan HCl"
                android:layout_below="@id/txt_txt_view03"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/gambar01"
                android:layout_below="@id/txt_txt_view04"
                android:src="@drawable/gambar01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/gambar02"
                android:layout_below="@id/gambar01"
                android:src="@drawable/gambar02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/txt_txt_view05"
                android:text="Ion Na+ berasal dari basa kuat (NaOH), sedangkan ion Cl- berasal dari asam kuat (HCl), karena perbandingan H+ dan OH- sama, maka tidak akan terhidrolisis dan garam bersifat netral."
                android:layout_below="@id/gambar02"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sub_bab_judul02"
                android:layout_below="@id/txt_txt_view05"
                android:padding="2dp"
                android:text="2. Hidrolisis garam asam kuat dengan basa lemah dapat terhidrolisis dan bersifat asam."
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_txt_view06"
                android:text="Hidrolisis garam asam kuat dengan basa lemah dapat terhidrolisis, namun hanya terhidrolisis parsial. Karena jika direaksikan dengan air, hanya kation yang terhidrolisis, sedangkan anion tidak terhidrolisis. Contoh hidrolisis garam asam kuat dengan basa lemah:"
                android:layout_below="@id/sub_bab_judul02"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_txt_view07"
                android:text="Garam NH4Cl yang tersusun dari HCl dan NH4OH"
                android:layout_below="@id/txt_txt_view06"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/gambar03"
                android:layout_below="@id/txt_txt_view07"
                android:src="@drawable/gambar03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/txt_txt_view08"
                android:text="NH4+ akan terhidrolisis, sedangkan Cl- tidak terhidrolisis."
                android:layout_below="@id/gambar03"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/gambar04"
                android:layout_below="@id/txt_txt_view08"
                android:src="@drawable/gambar04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/txt_txt_view09"
                android:text="Adanya ion H+ menunjukkan bahwa larutan bersifat asam."
                android:layout_below="@id/gambar04"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sub_bab_judul03"
                android:layout_below="@id/txt_txt_view09"
                android:padding="2dp"
                android:text="3. Hidrolisis garam asam lemah dengan basa kuat dapat terhidrolisis dan bersifat basa."
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_txt_view10"
                android:text="Hidrolisis garam asam lemah dengan basa kuat dapat terhidrolisis, namun hanya terhidrolisis parsial. Karena jika direaksikan dengan air, hanya anion yang terhidrolisis, sedangkan kation tidak terhidrolisis. Contoh hidrolisis garam asam lemah dengan basa kuat:"
                android:layout_below="@id/sub_bab_judul03"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_txt_view11"
                android:text="Garam CH3COONa yang tersusun dari CH3COOH dan NaOH"
                android:layout_below="@id/txt_txt_view10"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/gambar05"
                android:layout_below="@id/txt_txt_view11"
                android:src="@drawable/gambar05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/txt_txt_view12"
                android:text="CH3COO- akan terhidrolisis, sedangkan Na+ tidak terhidrolisis."
                android:layout_below="@id/gambar05"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/gambar06"
                android:layout_below="@id/txt_txt_view12"
                android:src="@drawable/gambar06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/gambar07"
                android:layout_below="@id/gambar06"
                android:src="@drawable/gambar07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/txt_txt_view13"
                android:text="Adanya ion OH- menunjukkan bahwa larutan bersifat basa."
                android:layout_below="@id/gambar07"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sub_bab_judul04"
                android:layout_below="@id/txt_txt_view13"
                android:padding="2dp"
                android:text="4. Hidrolisis garam asam lemah dengan basa lemah dapat terhidrolisis dan dapat bersifat netral, asam maupun basa."
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_txt_view14"
                android:text="Hidrolisis garam asam lemah dengan basa lemah dapat terhidrolisis secara sempurna. Karena jika direaksikan dengan air, kation dan anion akan sama-sama terhidrolisis. Sedangkan, sifat netral, asam, maupun basa bergantung pada nilai pH."
                android:layout_below="@id/sub_bab_judul04"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_txt_view15"
                android:text="Jika pH lebih kecil dari 7 maka garam bersifat asam\n Jika pH sama dengan 7 maka garam bersifat netral \n Jika pH lebih besar dari 7 maka garam bersifat basa \n\n Contoh hidrolisis garam asam lemah dengan basa lemah: \n Garam CH3COONH4 yang tersusun dari CH3COOH dan NH4OH"
                android:layout_below="@id/txt_txt_view14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/gambar08"
                android:layout_below="@id/txt_txt_view15"
                android:src="@drawable/gambar08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/txt_txt_view16"
                android:text="CH3COO- dan NH4+ akan terhidrolisis"
                android:layout_below="@id/gambar08"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/gambar09"
                android:layout_below="@id/txt_txt_view16"
                android:src="@drawable/gambar09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/txt_txt_view17"
                android:text="adanya ion H+ dan OH- menunjukkan bahwa larutan garam tersebut terhidrolisis sempurna, sehingga sifatya bergantung pada harga pH."
                android:layout_below="@id/gambar09"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>